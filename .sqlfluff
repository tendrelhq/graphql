[sqlfluff]
exclude_rules = convention.terminator, layout.end_of_file, layout.indent, layout.cte_bracket, layout.select_targets, layout.spacing
max_line_length = 88

[sqlfluff:rules]
capitalisation_policy = lower
extended_capitalisation_policy = lower

[sqlfluff:rules:convention.terminator]
multiline_newline = True

