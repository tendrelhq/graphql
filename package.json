{
  "name": "@tendrelhq/graphql",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "clean": "git clean -dffx -e .direnv -e .env.local -e .envrc -e .pre-commit-config.yaml -e /data -e postgrestools.jsonc",
    "format": "eval $TREEFMT",
    "generate": "bun run --filter='./packages/*' generate",
    "postgenerate": "bun format",
    "install:clean": "bun clean && bun i",
    "postinstall": "bun generate",
    "server:build": "bun run --filter=./packages/server build",
    "server:generate": "bun run --filter=./packages/server generate",
    "simulator:generate": "bun run --filter=./packages/simulator generate",
    "simulator:start": "bun run ./packages/simulator/src/main.tsx"
  },
  "dependencies": {
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.7.0",
    "@vtsls/language-server": "^0.2.8",
    "graphql-language-service-cli": "^3.5.0",
    "prettier": "^3.5.3",
    "typescript-language-server": "^4.3.4"
  }
}
